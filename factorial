#include <iostream>
using namespace std;
int factorial(int f)
{
    if (f < 0) return 0;
    if (f == 0) return 1;
    else return f * factorial(f - 1);
}

int main()
{
    int f;
    cout << "Введите число для вычисления факториала: ";
    cin >> f;
    cout << "Факториал " << f << " = " << factorial(f) << endl;
    return 0;
}
